<% if message.from != "assistant" %>
  <div class="flex items-end justify-start mt-2">
    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-blue-500 text-white font-bold">
      U
    </div>
    <div class="ml-2 p-3 rounded-l-none rounded-r-lg bg-blue-100 text-blue-800">
      <%= message.content %>
    </div>
  </div>
<% else %>
  <!-- ChatGPT Message -->
  <div class="flex items-end justify-end mt-2">
    <div class="mr-2 p-3 rounded-r-none rounded-l-lg bg-gray-200 text-gray-800">
      <%= message.content %>
    </div>
    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-gray-400 text-white font-bold">
      PG
    </div>
  </div>
<% end %>